---
name: ci # TODO rename this to "test" and the other file "publish"?

on:
  push:
    branches:
      - master
      - "[1-9]+.[0-9]+.x"
  pull_request:
    branches:
      - master
      - "[1-9]+.[0-9]+.x"

env:
  GRADLE_OPTS: '-Dorg.gradle.jvmargs="-Xmx2048m -XX:+HeapDumpOnOutOfMemoryError"'

jobs:
  build:
    strategy:
      fail-fast: false
      matrix:
        java: ["11"]
        os: [ubuntu-latest]
    runs-on: ${{ matrix.os }}
    steps:
      - uses: actions/checkout@v2
        with:
          fetch-depth: 0
      - name: setup-jdk
        uses: actions/setup-java@v1
        with:
          java-version: ${{ matrix.java }}
      - name: setup-cache
        uses: actions/cache@v2.1.4
        with:
          path: |
            ~/.gradle/caches
            ~/.gradle/wrapper
          key: ${{ runner.os }}-gradle-${{ hashFiles('**/*.gradle*', '**/gradle-wrapper.properties') }}
          restore-keys: |
            ${{ runner.os }}-gradle-

      # - name: decrypt-properties
      #   run: openssl aes-256-cbc -d -in gradle.properties.enc -out gradle.properties -k "$KEY" -md sha256

      # - name: check-test
      #   run: ./gradlew check test

      - name: publish-snapshots
        if: success() && github.event_name == 'push' && matrix.java == '11'
        env:
          SONATYPE_USERNAME: ${{ secrets.SONATYPE_USERNAME }}
          SONATYPE_PASSWORD: ${{ secrets.SONATYPE_PASSWORD }}
        # run: ./gradlew publishToSonatype docs --no-daemon
        run: ./gradlew snapshot $SWITCHES -x release -x test
