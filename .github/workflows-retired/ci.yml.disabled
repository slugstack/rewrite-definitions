---
name: ci

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch: {}

jobs:
  build:
    strategy:
      matrix:
        java: ["11", "15"]
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: set-up-jdk
        uses: actions/setup-java@v1
        with:
          java-version: ${{ matrix.java }}
          settings-path: ${{ github.workspace }} # location for the settings.xml file; this is the default value, but helps to make it explicit

      - uses: actions/cache@v2.1.4
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      - name: build-maven
        run: ./mvnw --settings=${{ github.workspace }}/settings.xml --file=pom.xml --no-transfer-progress --batch-mode clean verify
        # run: ./mvnw --no-transfer-progress -B clean verify --file pom.xml

      - name: build-gradle
        run: ./gradlew build
